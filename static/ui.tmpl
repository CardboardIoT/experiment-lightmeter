<div class="component">
  <svg class="icon-timer">
    <use xlink:href="icons/stopwatch.svg#stopwatch"></use>
  </svg>
  <span class="label visuallyhidden">Time</span>
  <span class="value">
    {{timeSecs || 'â€”'}}<span class="unit">s</span>
  </span>
</div>
<div class="component">
  <span class="label iso">ISO</span>
